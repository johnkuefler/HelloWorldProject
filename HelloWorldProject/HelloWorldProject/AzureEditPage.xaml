<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloWorldProject.AzureEditPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Edit" FontAttributes="Bold" FontSize="Large"/>
            <Entry x:Name="makeEntry" />
            <Entry x:Name="modelEntry" />
            <Button x:Name="updateButton" Text="Update" Clicked="updateButton_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>