<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloWorldProject.AnimalPage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Spacing="10"
                     Padding="10">

                <Image x:Name="animalImage"
                   WidthRequest="400"
                   HeightRequest="400"
                   Aspect="AspectFit"/>

                <Label x:Name="nameLabel"
                   FontSize="Large"
                   FontAttributes="Bold"/>

                <Label x:Name="descriptionLabel"/>

                <Label x:Name="weightLabel"/>

                <Label x:Name="heightLabel"/>

                <Label x:Name="combatAbilityLabel"/>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>