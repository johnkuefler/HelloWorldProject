<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloWorldProject.LocalStoragePage">
    <ContentPage.Content>
        <StackLayout
            Spacing="10"
            Padding="10">
            <Label Text="Local Storage" />

            <Entry x:Name="email" Placeholder="Email"/>
            <Entry x:Name="password" Placeholder="Password"/>

            <Button Text="Update" x:Name="updateButton" Clicked="updateButton_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>